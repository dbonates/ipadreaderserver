<%- model_class = Issue -%>
<div class="page-header">
  <h1><%= @issue.name%> </h1>
</div>


      <div>
          
    
          <span class="row">

            <div class="span2">

                <%=image_tag @issue.cover, :class => "img-polaroid", width: 150, height: 200 %>
            </div>

            <div class="span9">



              <span class="row">
                  <div id="cover-name" class="cover-info"><strong>Identifier: </strong><%= @issue.product_identifier %></div>
                  <div class="cover-info"><strong>PDF: </strong><%= File.basename(@issue.pdf.to_s) %></div>
                  <div class="cover-info"><strong>Info: </strong><%= @issue.description %></div>
                  <div class="cover-info"><strong>Posição: </strong><%= @issue.position %></div>
                  <div class="cover-info"><strong>Grátis? </strong><%= @issue.is_free %></div>
              </span>




               <span class="row">
                <div class="cover-info">
                <%= link_to "Voltar",
              magazine_issues_path(@issue.magazine_id), :class => 'btn'  %>
  <%= link_to "Editar",
              edit_issue_path(@issue), :class => 'btn' %>
  <%= link_to "Deletar",
              issue_path(@issue),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %></div>
               </span>
            </div>  


        </span>


      </div>


<br />

