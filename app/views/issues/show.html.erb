<%- model_class = Issue -%>
<div class="page-header">
  <h1><%= @issue.name%> Publicação: <%= @issue.magazine_id %> </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @issue.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_identifier) %>:</strong></dt>
  <dd><%= @issue.product_identifier %></dd>
  <dt><strong>Capa:</strong></dt>
  <dd><%= @issue.cover %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pdf) %>:</strong></dt>
  <dd><%= @issue.pdf %></dd>
  <dt><strong>Descrição</strong></dt>
  <dd><%= @issue.description %></dd>
  <dt><strong>Grátis? </dt>
  <dd><%= @issue.free %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              magazine_issues_path(@issue.magazine_id), :class => 'btn'  %>
  <%= link_to "Editar",
              edit_issue_path(@issue), :class => 'btn' %>
  <%= link_to "Deletar",
              issue_path(@issue),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Tem certeza?')) },
              :class => 'btn btn-danger' %>
</div>
