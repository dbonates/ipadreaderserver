<%= form_for @magazine, :html => { :class => 'form-horizontal', multipart:true } do |f| %>
  <div class="control-group">
    <div class ='control-label'>Nome</div>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Bundle identifier", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :apps_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shared_secret, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shared_secret, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class='control-label'>Vis√≠vel</div>
    <div class="controls">
      <%= f.check_box :visible %>
    </div>
  </div>
<% if current_user.admin %>
  <div class="control-group">
    <div class='control-label'>Cliente</div>
    <div class="controls">
      <%= f.select(:user_id, @users.collect { |u| [u.email, u.id]}) %>
    </div>
  </div>                
<% end %>
  <div class="control-group">
    <%= f.label :pem, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :pem, :class => 'file_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Confirmar", :class => 'btn btn-primary' %>
    <%= link_to "Cancelar",
                magazines_path, :class => 'btn' %>
  </div>
<% end %>
