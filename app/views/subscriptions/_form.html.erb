<% path = @subscription.new_record? ? [@magazine, @subscription] : @subscription %>
<%= form_for path, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
     <div class ='control-label'>Nome:</div>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class ='control-label'>Product Identifier:</div>
    <div class="controls">
      <%= f.text_field :product_identifier, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Confirmar", :class => 'btn btn-primary' %>
    <%= link_to "Cancelar",
                magazine_subscriptions_path(@subscription.new_record? ? @magazine : @subscription.magazine_id), :class => 'btn' %>
  </div>
<% end %>
